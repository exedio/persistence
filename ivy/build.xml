<?xml version="1.0"?>
<project
		xmlns:ivy="antlib:org.apache.ivy.ant"
		name="ivy"
		default="copy">
	<ivy:settings file="settings.xml" />
	<target name="resolve">
		<delete dir="artifacts" />
		<mkdir dir="artifacts" />
		<ivy:retrieve file="../ivy.xml" pattern="artifacts/[artifact]-[revision]-[type].[ext]" />
	</target>
	<target name="copy" depends="resolve">
		<copy overwrite="true" file="artifacts/junit-4.4-jar.jar" tofile="../lib/junit.jar" />
		<copy overwrite="true" file="artifacts/cojen-2.0-jar.jar" tofile="../lib/cojen.jar" />
		<copy overwrite="true" file="artifacts/cojen-2.0-source.jar" tofile="../lib/cojen-sources.jar" />
		<copy overwrite="true" file="artifacts/mysql-connector-java-5.0.3-jar.jar" tofile="../lib/jdbc/mysql-connector-java-5.0.3-bin.jar" />
		<copy overwrite="true" file="artifacts/ojdbc5-11.1.0.7.0-jar.jar" tofile="../lib/jdbc/ojdbc5-11.1.0.7.0.jar" />
		<copy overwrite="true" file="artifacts/apache-tomcat-6.0.16-dist.tar.gz" tofile="../lib/apache-tomcat.tar.gz" />
	</target>
</project>

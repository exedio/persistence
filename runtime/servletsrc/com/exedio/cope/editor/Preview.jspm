package com.exedio.cope.editor;

import static com.exedio.cops.XMLEncoder.encode;

import java.util.List;
import java.util.Map;

final class Preview_Jspm
{
	static final void writeOverview(
			final StringBuilder out,
			final String url,
			final Map<Modification, String> modifications,
			final Target activeTarget,
			final List<Target> targets,
			final String activeAuthor,
			final boolean draftsEnabled,
			final List<Draft> drafts)
	{
%><!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"  "http://www.w3.org/TR/html4/loose.dtd">
<html>
	<head>
		<meta http-equiv="content-type" content="text/html; charset=<%=Editor.UTF8%>">
		<title>Content Editor</title>
		<style>
			h1
			{
				font-family:sans-serif;
				font-size:180%;
			}
			
			img
			{
				border:0;
			}
			
			img.logo
			{
				float:right;
				width:198px;
				height:60px;
			}
			
			table caption
			{
				font-style:italic;
				text-align:left;
				white-space:nowrap;
				background:#ccc;
				padding:1px 5px;
				border:solid 2px white;
				border-bottom-width:0px;
			}
			
			table th
			{
				text-align:left;
				vertical-align:top;
				background:#ccc;
				border:solid 1px #ccc;
				padding:1px 3px;
				font-weight:normal;
			}
			
			table td
			{
				text-align:left;
				vertical-align:top;
				border:solid 1px #ccc;
				padding:1px 3px;
			}
			
			table td.number
			{
				text-align:right;
			}
			
			table tr.open td
			{
				background-color:#bbd;
				border-color:#bbd;
			}
			
			hr
			{
				height:0px;
				margin:1em 0px;
				border-width:0px;
				border-top:1px solid #999;
			}
		</style>
	</head>
	<body>
		<a href="http://cope.sourceforge.net/" target="_blank"><img src="http://cope.sourceforge.net/exedio.png" alt="Exedio Logo" class="logo"></a>
		<h1>COPE Content Editor</h1><%
		
	if(draftsEnabled)
	{
		%>
		<table>
			<tr>
				<th></th>
				<th>Date</th>
				<th>Author</th>
				<th>Comment</th>
				<th>Items</th>
				<th></th>
			</tr><%
			for(final Target target : targets)
			{
				final boolean open = activeTarget.equals(target);
				final boolean live = target.isLive();
			%>
			<tr<% if(open){%> class="open"<%} %>>
				<td>
					<form action="<%=url%>" method="POST" style="display:inline;">
						<input type="hidden" name="<%=Editor.TARGET_ID%>"   value="<%=target.getID()%>">
						<input type="submit" name="<%=Editor.TARGET_OPEN%>" value="Open"<% if(open){%> disabled="disabled"<%} %>>
					</form>
				</td><%
			if(live)
			{
				%>
				<td colspan="5"><%=target.getDescription()%></td><%
			}
			else
			{
				final Draft draft = ((TargetDraft)target).draft;
				final int itemsCount = draft.getItemsCount();
				%>
				<td><%=draft.getDate()%></td>
				<td><%=draft.getAuthor()%></td>
				<td><%=draft.getComment()%></td>
				<td class="number"><%=itemsCount%></td><%
				%>
				<td>
					<form action="<%=url%>" method="POST" style="display:inline;">
						<input type="hidden" name="<%=Editor.DRAFT_ID    %>" value="<%=target.getID()%>">
						<input type="submit" name="<%=Editor.DRAFT_LOAD  %>" value="Load">
						<input type="submit" name="<%=Editor.DRAFT_DELETE%>" value="Delete"<%
							if(itemsCount>0)
							{
								%> onclick="return confirm('Do you really want to delete <%=
								encode(target.getDescription())
								%>?.\nYou cannot undo this operation.')"<%
							}
						%>>
					</form>
				</td><%
			}
			%>
			</tr><%
			}
		%>
			<tr>
				<form action="<%=url%>" method="POST">
					<td></td>
					<td></td>
					<td><%=activeAuthor%></td>
					<td><input name="<%=Editor.DRAFT_COMMENT%>" type="text"></td>
					<td></td>
					<td><input type="submit" name="<%=Editor.DRAFT_NEW%>" value="New"></td>
				</form>
			</tr>
		</table>
		<hr><%
	}
	
	if(modifications.isEmpty())
	{
		%>
		<div>There are no unsaved modifications in this Content Editor session.</div><%
	}
	else
	{
		%>
		<form action="<%=url%>" method="POST">
			<table>
				<caption>Modifications</caption>
				<tr>
					<th></th>
					<th>Old</th>
					<th>New</th>
				</tr><%
				
				for(final Map.Entry<Modification, String> e : modifications.entrySet())
				{
					final Modification m = e.getKey();
				%>
				<tr>
					<td><input name="<%=Editor.MODIFICATION_IDS%>" type="checkbox" value="<%=m.getID()%>" checked="checked"></td>
					<td><%=m.getOldValue()%></td>
					<td><%=e.getValue()%></td>
				</tr><%
				}
				%>
			</table>
			<input name="<%=Editor.MODIFICATION_PUBLISH%>" type="submit" value="Publish">
			<input name="<%=Editor.MODIFICATION_DISCARD%>" type="submit" value="Discard"><%
			
		if(draftsEnabled)
		{
			%>
			<br>
			<input name="<%=Editor.MODIFICATION_PERSIST%>" type="submit" value="Save as new Draft:">
			<input name="<%=Editor.MODIFICATION_PERSIST_COMMENT%>" type="text"><%
			
			if(!drafts.isEmpty())
			{
			%>
			<br>
			<input name="<%=Editor.SAVE_TO_DRAFT%>" type="submit" value="Save to Draft:">
			<select name="<%=Editor.DRAFT_ID%>"><%
			for(final Draft draft : drafts)
			{
				%>
				<option value="<%=draft.getCopeID()%>"><%=draft.getDropDownSummary()%></option><%
			}
			%>
			</select><%
			}
		}
		%>
		</form><%
	}
	%>
	</body>
</html><%
	}
}
%>
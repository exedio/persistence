<?xml version="1.0"?>

<project name="cope getlib" default="getlib" basedir=".">
	<property environment="env" />
	<property name="getlib.home" value="${env.GETLIB_HOME}" />

	<import file="${getlib.home}/getlib-contrib.xml"/>

	<!-- the project uses several mysql libraries directly -->
	<target name="getlib" depends="hsqldb, trove, cojen, bsh-core, exedio-cope-util, exedio-jspm, exedio-cope-console">
		<delete>
			<fileset dir="lib">
				<include name="exedio-cope.jar" />
				<include name="exedio-cope.jar-CHANGELOG" />
				<include name="exedio-cope.jar-src.zip" />
				<include name="exedio-cope-instrument.jar" />
				<include name="exedio-cope-test.jar" />
			</fileset>
		</delete>
	</target>
	
</project>

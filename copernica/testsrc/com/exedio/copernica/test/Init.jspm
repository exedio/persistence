package com.exedio.copernica.test;

import java.io.PrintStream;

final class Init_Jspm
{
	final static void write(final PrintStream out, final boolean initialized, final boolean transaction) throws InterruptedException
	{%>
<html>
	<head>
		<meta http-equiv="content-type" content="text/html; charset=<%=InitServlet.ENCODING%>">
		<title>
			Copernica - Database Administration
		</title>
	</head>
	<body>
		<h1>Copernica</h1>
		<h2>Generic Backoffice for COPE</h2>
		<h3>Example Initialization for Test Model</h3>

		<form action="init.jsp" method="POST">
			Database:
			<br>
			<input type="submit" name="INIT" value="init" />
			<input type="submit" name="TRANSACTION" value="transaction" /><%
			if(initialized)
			{
			%>
			<div class="message">Example system successfully created!</div><%
			}
			if(transaction)
			{
			%>
			<div class="message">Waiting 10 seconds until ending transaction ...</div><%
			out.flush();
			Thread.sleep(10000);
			%>
			<div class="message">Finished.</div><%
			}
			%>
		</form>
	</body>
</html>
<%
	}
}
%>
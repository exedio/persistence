			<fileset dir="build/console/classes" />
		</copy>
		<copy todir="console/web/WEB-INF/lib">
			<fileset file="lib/trove.jar" />
			<fileset file="lib/exedio-cops.jar" />
			<fileset file="lib/exedio-cope-util.jar" />
			<fileset file="lib/jdbc/hsqldb.jar" />

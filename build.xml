					<classpath>
						<pathelement location="lib/exedio-cope-util.jar" />
						<pathelement location="lib/trove.jar" />
						<pathelement location="lib/jdbc/${@{dialect.file}.jar}" />
					</classpath>
				</ljavac>
			</sequential>
		</for>
	</target>


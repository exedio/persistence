	</target>
	
	<target name="copernica.web" depends="copernica.test.compile">
		<foreachEnvironment skipSwitch="copernica.web">
			<body>
				<mkdir dir="build/copernica/web-@{env}" />
				
				<copy todir="build/copernica/web-@{env}/WEB-INF/classes">
					<fileset dir="build/runtime/classes" />
					<fileset dir="build/runtime/testclasses" />

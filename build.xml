					<fileset dir="build/copernica/testclasses" />
				</copy>
				
				<copy todir="build/copernica/web-@{env}/WEB-INF/lib">
					<fileset file="lib/trove.jar" />
					<fileset file="lib/commons-fileupload.jar" />

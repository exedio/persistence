package com.exedio.cope.console;

import static com.exedio.cope.console.ConsoleCop.ratio;

import java.io.PrintStream;

import com.exedio.cope.util.QueryCacheHistogram;
import com.exedio.cope.util.QueryCacheInfo;

import static com.exedio.cops.XMLEncoder.encode;

final class QueryCache_Jspm extends Console_Jspm
{
	final static void writeBody(
			final QueryCacheCop cop,
			final PrintStream out,
			final int limit,
			final QueryCacheInfo queryCacheInfo,
			final QueryCacheCop.Content content)
	{
		%>
		<table>
			<caption>Query Cache Statistics</caption>
			<tr><th colspan="2">Limit</th><td><%= cop.format(limit)%></td></tr>
			<tr><th colspan="2">Level</th><td><%= cop.format(queryCacheInfo.getLevel()) %></td></tr>
			<tr><th colspan="2">Replacements</th><td><%=cop.format(queryCacheInfo.getReplacements())%></td></tr>
			<tr><th colspan="2">Invalidations</th><td><%=cop.format(queryCacheInfo.getInvalidations())%></td></tr>
			<tr><th colspan="2">log<sub>10</sub> Hits/Misses</th><td><%=ratio(queryCacheInfo.getHits(), queryCacheInfo.getMisses())%></td></tr>
			<tr><th colspan="2">Hits</th><td><%=  cop.format(queryCacheInfo.getHits())  %></td></tr>
			<tr><th colspan="2">Misses</th><td><%=cop.format(queryCacheInfo.getMisses())%></td></tr><%
			if(content.histogram.length>0)
			{
			%>
			<tr><th rowspan="3">Key Length</th><th>Average</th><td><%=cop.format(content.avgKeyLength)%></td></tr>
			<tr><th>Maximum</th><td><%=cop.format(content.maxKeyLength)%></td></tr>
			<tr><th>Minimum</th><td><%=cop.format(content.minKeyLength)%></td></tr>
			<tr><th rowspan="<%=content.resultSizes.length+3%>">Result Size</th><th>Average</th><td><%=cop.format(content.avgResultSize)%></td></tr>
			<tr><th>Maximum</th><td><%=cop.format(content.maxResultSize)%></td></tr>
			<tr><th>Minimum</th><td><%=cop.format(content.minResultSize)%></td></tr><%
			for(int i = 0; i<content.resultSizes.length; i++)
			{
			%>
			<tr><th>Size <%=i%></th><td><%=cop.format(content.resultSizes[i])%></td></tr><%
			}
			%>
			<tr><th rowspan="3">Hits</th><th>Average</th><td><%=cop.format(content.avgHits)%></td></tr>
			<tr><th>Maximum</th><td><%=cop.format(content.maxHits)%></td></tr>
			<tr><th>Minimum</th><td><%=cop.format(content.minHits)%></td></tr><%
			}
		%>
		</table>
		<hr>
		<% writeToggle(out, cop.toToggleCondense(), cop.condense); %> condense<%
		
		if(cop.condense)
		{
		
		final String[] names = {
			"Recent Usage (LRU) (Average)",
			"Count",
			"Result Size (Sum)",
			"Cache Hits (Sum)",
			"Query",
		};
		final String[] shortNames = {
			"ru",
			"cnt",
			"rs",
			"ch",
		};
		%>
		<table id="coloredTable">
			<caption>Query Cache Histogram</caption><%
			ColoredTable_Jspm.writeHeader(out, names, shortNames);
		
		final int histogramLimit = cop.histogramLimit;
		
		for(int i = 0; i<content.histogramCondensed.length; i++)
		{
			if(i>=histogramLimit)
			{
			%>
			<tr>
				<td class="text" colspan="<%=names.length%>">
					Skipped display of <%=content.histogramCondensed.length-histogramLimit%> more queries because limited to <%=histogramLimit%> queries.
					<form action="<%=cop%>" method="GET">
						New limit:
						<input type="text" name="<%=cop.HISTOGRAM_LIMIT%>" value="<%=histogramLimit%>">
						<input type="submit" value="set">
					</form>
				</td>
			</tr><%
				break;
			}
			final QueryCacheCop.Condense condense = content.histogramCondensed[i];
			final String[] data = {
					cop.format(condense.getRecentUsage()),
					cop.format(condense.getCount()),
					cop.format(condense.getResultSize()),
					cop.formatAndHide(0, condense.getHits()),
				};
			%>
			<tr><%
				ColoredTable_Jspm.writeData(out, data); %>
				<td class="text"><%=encode(condense.query)%></td>
			</tr><%
		}
		
		}
		else
		{
		
		final String[] names = {
			"Recent Usage (LRU)",
			"Result Size",
			"Cache Hits",
			"Query",
		};
		final String[] shortNames = {
			"ru",
			"rs",
			"ch",
		};
		%>
		<table id="coloredTable">
			<caption>Query Cache Histogram</caption><%
			ColoredTable_Jspm.writeHeader(out, names, shortNames);
		
		final int histogramLimit = cop.histogramLimit;
		
		for(int i = 0; i<content.histogram.length; i++)
		{
			if(i>=histogramLimit)
			{
			%>
			<tr>
				<td class="text" colspan="<%=names.length%>">
					Skipped display of <%=content.histogram.length-histogramLimit%> more queries because limited to <%=histogramLimit%> queries.
					<form action="<%=cop%>" method="GET">
						New limit:
						<input type="text" name="<%=cop.HISTOGRAM_LIMIT%>" value="<%=histogramLimit%>">
						<input type="submit" value="set">
					</form>
				</td>
			</tr><%
				break;
			}
			final QueryCacheHistogram histogram = content.histogram[i];
			final String[] data = {
					cop.format(i),
					cop.format(histogram.getResultSize()),
					cop.formatAndHide(0, histogram.getHits()),
				};
			%>
			<tr><%
				ColoredTable_Jspm.writeData(out, data); %>
				<td class="text"><%=encode(histogram.getQuery())%></td>
			</tr><%
		}
		
		}
		%>
		</table><%
	}
}%>
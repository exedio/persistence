package com.exedio.cope.console;

import java.io.PrintStream;
import java.util.List;
import java.util.Map;
import java.util.TreeMap;

import com.exedio.cope.Migration;
import com.exedio.cope.console.MigrationCop.Line;

final class Migration_Jspm extends Console_Jspm
{
	final static void writeHead(final PrintStream out)
	{
		%>
		<script>
			function toggleSql(image,revision)
			{
				var sqlElement = document.getElementById("sql" + revision);
				var imageSrc = image.src;
				if(imageSrc.substring(imageSrc.length-8)=="true.png")
				{
					sqlElement.style.display = "none";
					image.src = imageSrc.substring(0, imageSrc.length-8) + "false.png";
				}
				else
				{
					sqlElement.style.display = "block";
					image.src = imageSrc.substring(0, imageSrc.length-9) + "true.png";
				}
			}
		</script><%
	}
	
	final static void writeBody(
			final PrintStream out,
			final int current,
			List<Line> lines)
			
			
	{
		%>
		<table>
			<caption>Migrations</caption>
			<tr><th>rev.</th><th>declared</th><th>logged</th></tr><%
			for(final Line line : lines)
			{
				final Migration migration = line.migration;
				final String logString = line.logString;
				final TreeMap<String, String> logProperty = line.logProperties;
			%>
			<tr>
				<td><% final int v = migration.getRevision(); if(v==current){%>&#187;&nbsp;<%} %><%=v%></td>
				<td class="text"><%
				if(migration!=null)
				{
					%>
					<img class="node" src="<%=ConsoleServlet.nodeFalse%>" onClick="toggleSql(this,<%=v%>)">
					<%=encode(migration.getComment())%>
					<ul id="sql<%=v%>" class="expand"><%
						for(final String sql : migration.getBody())
						{
						%>
						<li><%=encode(sql)%></li><%
						}
					%>
					</ul>
				<%
				}
				else
				{
					%>-<%
				}
				%></td>
				<td class="text"><%
				if(logString!=null)
				{
					%><%=encode(logString)%><%
				}
				else if(logProperty!=null)
				{
					for(final Map.Entry<String, String> entry : logProperty.entrySet())
					{
						%><%=encode(entry.getKey())%>=<%=encode(entry.getValue())%><br><%
					}
				}
				else
				{
					%>-<%
				}
				%></td>
			</tr><%
			}
			%>
		</table><%
	}
	
	final static void writeBodyDisabled(final PrintStream out)
	{
		%>
		<table>
			<caption>Migrations</caption>
			<tr>
				<td class="text">
					Migrations are not enabled for this model.
					<br>
					Use the <a
						href="http://cope.sourceforge.net/api/com/exedio/cope/Model.html#Model(com.exedio.cope.Migration[], com.exedio.cope.Type...)"
						target="_blank">migration constructor</a> to enable.
				</td>
			</td>
		</table><%
	}
}%>
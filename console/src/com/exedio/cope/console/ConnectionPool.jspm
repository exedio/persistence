package com.exedio.cope.console;

import java.io.PrintStream;

import com.exedio.cope.util.ConnectionPoolInfo;
import com.exedio.cope.util.PoolCounter;

final class ConnectionPool_Jspm extends Console_Jspm
{
	final static void writeBody(
			final ConnectionPoolCop cop,
			final PrintStream out,
			final ConnectionPoolInfo info)
	{
		final PoolCounter poolCounter = info.getCounter();
		final String[] names = {
			"Loss = Destroy/Get /%",
			"Idle",
			"Idle Maximum",
			"Create",
			"Destroy",
			"Idle Limit",
		};
		final String[] shortNames = {
			"%",
			"id",
			"ix",
			"cr",
			"dy",
		};
		%>
		<table>
			<caption>Connection Pool Statistics</caption>
			<tr>
				<th>Idle</th>
				<td><%=cop.format(info.getIdleCounter())%></td>
			</tr>
			<tr>
				<th>Get</th>
				<td><%=cop.format(poolCounter.getGetCounter())%></td>
			</tr>
			<tr>
				<th>Put</th>
				<td><%=cop.format(poolCounter.getPutCounter())%></td>
			</tr>
			<tr>
				<th>Invalid From Idle</th>
				<td><%=cop.format(info.getInvalidFromIdle())%></td>
			</tr>
			<tr>
				<th>Invalid Into Idle</th>
				<td><%=cop.format(info.getInvalidIntoIdle())%></td>
			</tr>
		</table>
		<hr>
		<table id="coloredTable">
			<caption>Hypothetical</caption><%
			ColoredTable_Jspm.writeHeader(out, names, shortNames);
			for(final PoolCounter.Pool pool : poolCounter.getPools())
			{
				final boolean inconsistent = !pool.isConsistent();
				
				final String[] data = {
						cop.format(pool.getLoss()),
						cop.format(pool.getIdleCount()),
						cop.format(pool.getIdleCountMax()),
						cop.format(pool.getCreateCounter()),
						cop.format(pool.getDestroyCounter()),
					};
			%>
			<tr<%if(inconsistent){%> class="inconsistent"<%}%>><%
				ColoredTable_Jspm.writeData(out, data);
				%>
				<td><%if(inconsistent){%>inconsistent <%}%><%=pool.getIdleLimit()%></td>
			</tr><%
			}
		%>
		</table><%
	}
}%>
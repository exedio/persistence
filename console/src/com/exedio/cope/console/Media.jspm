package com.exedio.cope.console;

import java.io.PrintStream;
import java.util.Collection;
import java.util.Set;

import com.exedio.cope.Item;
import com.exedio.cope.Query;
import com.exedio.cope.pattern.CachedMedia;
import com.exedio.cope.pattern.Media;
import com.exedio.cope.pattern.MediaFilter;
import com.exedio.cope.pattern.MediaPath;
import com.exedio.cope.pattern.MediaRedirect;
import com.exedio.cope.pattern.MediaThumbnail;
import com.exedio.cope.pattern.MediaImageMagickFilter;
import com.exedio.cope.pattern.MediaImageMagickThumbnail;

final class Media_Jspm extends Console_Jspm
{
	final static void writeBody(
			final MediaStatsCop cop,
			final PrintStream out,
			final Collection<MediaPath> media,
			final String[] names,
			final String[] shortNames,
			final int[][] logs,
			final int[] total)
	{
		%>
		<table id="coloredTable">
			<caption>Media Statistics</caption>
			<tr><th colspan="<%=shortNames.length+1%>">No Such Path <small>(404)</small></th><td><%=cop.format(MediaPath.noSuchPath.get())%></td></tr><%
			writeColouredHeader(out, names, shortNames);
			int mediaIndex = 0;
			boolean firstMediaImageMagickFilter = true;
			for(final MediaPath path : media)
			{
				final String type = path.getType().getID();
				final String name = path.getName();
				%>
			<tr><%
				writeColouredData(out, cop.format(logs[mediaIndex++]));
				%>
				<td class="text"><%=type%></td>
				<td class="text"><a href="<%=cop.toMedia(path)%>"><%=name%></a></td>
				<td class="text"><%
					final String className = path.getClass().getName();
					if(className.startsWith("com.exedio.cope.pattern."))
					{
						%><a href="http://cope.sourceforge.net/api/<%=
							className.replace('.', '/')%>.html" target="_blank"><%=
							path.getClass().getSimpleName()%></a><%
					}
					else
					{
						%><%=className%><%
					}
					if(path instanceof Media)
					{
						final Media m = (Media)path;
						%>(<%=encode(m.getContentTypeDescription())%>)<%
					}
					else if(path instanceof MediaRedirect)
					{
						final MediaRedirect redirect = (MediaRedirect)path;
						%>(<%=redirect.getTarget().getName()%>)<%
					}
					else if(path instanceof MediaThumbnail)
					{
						final MediaThumbnail thumbnail = (MediaThumbnail)path;
						%>(<%=thumbnail.getSource().getName()%>,<%=thumbnail.getBoundX()%>,<%=thumbnail.getBoundY()%>)<%
					}
					else if(path instanceof MediaImageMagickThumbnail)
					{
						final MediaImageMagickThumbnail thumbnail = (MediaImageMagickThumbnail)path;
						%>(<%=thumbnail.getSource().getName()%>,<%=thumbnail.getBoundX()%>,<%=thumbnail.getBoundY()%>)<%
					}
					if(path instanceof MediaImageMagickFilter)
					{
						if(firstMediaImageMagickFilter)
						{
							firstMediaImageMagickFilter = false;
							final String message = MediaImageMagickFilter.getAvailabilityMessage();
							%><br><% if(message!=null) {%><%=message%><%} else {%>Availability not yet determined.<%}
						}
					}
					if(path instanceof MediaFilter)
					{
						final MediaFilter filter = (MediaFilter)path;
						final Set<String> contentTypes = filter.getSupportedSourceContentTypes();
						%><small><br>supports <% cop.printContentTypes(out, contentTypes); %></small><%
					}
				%></td>
			</tr><%
			}
		%>
			<tr><%
				writeColouredData(out, cop.format(total));
				%>
				<th colspan="3">Total</th>
			</tr>
		</table><%
	}

	final static void writeHead(
				final PrintStream out)
	{
		%>
		<style>
			img.media
			{
				border:dotted 4px black;
				background:url('<%=ConsoleServlet.imagebackground%>');
			}
		</style><%
	}
	
	final static void writeBody(
				final MediaCop cop,
				final PrintStream out,
				final Query.Result<? extends Item> items)
	{
		final MediaPath media = cop.media;
		final MediaPath other = cop.other;
		final CachedMedia mediaLastModified = media instanceof CachedMedia ? (CachedMedia)media : null;
		final Media mediaLength = media instanceof Media ? (Media)media : null;
		final boolean mediaInline = cop.mediaInline;
		final boolean otherInline = cop.otherInline;
		%>
		<table>
			<caption><%=media.getID()%><% cop.writePager(out, cop); %></caption>
			<tr>
				<th>Item</th>
				<th>URL <a href="<%=cop.toggleInlineMedia()%>">IN</a></th>
				<th>Content Type</th><%
				if(mediaLastModified!=null)
				{
				%>
				<th>Last Modified</th><%
				}
				if(mediaLength!=null)
				{
				%>
				<th>Length</th><%
				}
				if(other!=null)
				{
				%>
				<th><a href="<%=
					cop.toOther()%>"><%=other.getName()%></a> <a href="<%=
					cop.toggleInlineOther()%>">IN</a></th><%
				}
			%>
			</tr><%
	
			for(final Item item : items.getData())
			{
				final String contentType = media.getContentType(item);
				%>
			<tr>
				<td class="text"><%=item.getCopeID()%></td>
				<td class="text"><% writeURL(out, media.getURL(item), contentType, mediaInline); %></td>
				<td class="text"><%if(contentType!=null){%><%=contentType%><%}%></td><%
				if(mediaLastModified!=null)
				{
				%>
				<td><%=cop.formatDate(mediaLastModified.getLastModified(item))%></td><%
				}
				if(mediaLength!=null)
				{
				%>
				<td><%=cop.format(mediaLength.getLength(item))%></td><%
				}
				if(other!=null)
				{
				%>
				<td class="text"><% writeURL(out, other.getURL(item), other.getContentType(item), otherInline); %></td><%
				}
				%>
			</tr><%
			}
		%>
		</table><%
	}
	
	private static final void writeURL(final PrintStream out, final String url, final String contentType, final boolean inline)
	{
		if(url!=null)
		{
			%><a href="<%=url%>"><%
			if(inline && contentType!=null && contentType.startsWith("image/"))
			{
				%><img src="<%=url%>" class="media"><%
			}
			else
			{
				%><%=MediaCop.fn(url)%><%
			}
			%></a><%
		}
	}
}%>
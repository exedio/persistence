package com.exedio.cope.console;

import static com.exedio.cope.console.Format.format;

import java.io.PrintStream;
import java.util.HashMap;
import java.util.List;

import com.exedio.cope.console.TestCop.Info;

final class Test_Jspm
{
	final static void writeHead(final PrintStream out)
	{
		%>
		<script>
			function hide()
			{
				var table = document.getElementById("test_table");
				var rows = table.rows;
				for(rowCount = 0; rowCount<rows.length; rowCount++)
				{
					var row = rows[rowCount];
					var cells = row.cells;
					var keep = false;
					for(cellCount = 0; cellCount<cells.length; cellCount++)
					{
						var cell = cells[cellCount];
						if(cell.tagName=="TH" || cell.className=="failure")
						{
							keep = true;
							break;
						}
					}
					if(!keep)
						row.style.display = "none";
				}
			}
		</script><%
	}
	
	final static <I> void writeBody(
			final TestCop<I> cop,
			final PrintStream out,
			final String caption,
			final String[] headings,
			final List<I> items,
			final boolean test)
	{
		if(items.isEmpty())
		{
			%>
			<table>
				<caption><%=caption%></caption>
				<tr>
					<td class="text">
						There are no <%=cop.name%> in this model.
					</td>
				</td>
			</table><%
			return;
		}
		
		final ConsoleServlet.Store<HashMap<Integer, Info>> testStore = cop.getStore();
		
		final HashMap<Integer, Info> infos;
		if(test)
			infos = new HashMap<Integer, Info>();
		else if(testStore!=null)
			infos = testStore.value;
		else
			infos = null;
		
		writeButton(cop, out, test, testStore);
		int totalFailures = 0;
		int totalElapsed = 0;
		%>
		<table id="test_table">
			<caption><%=caption%></caption>
			<tr><%
				
				for(final String heading : headings)
				{
				%>
				<th><%=heading%></th><%
				}
				if(infos!=null)
				{
				%>
				<th>Failures</th>
				<th>Elapsed<small>/ms<small></th><%
				}
				%>
			</tr><%
		
		int itemNumber = 0;
		for(final I item : items)
		{
			%>
			<tr><%
			
			for(final String value : cop.getValues(item))
			{
				%>
				<td class="text"><%=value%></td><%
			}
			if(infos!=null)
			{
				final int failures;
				final long elapsed;
				
				if(test)
				{
					out.flush();
					final long start = System.currentTimeMillis();
					failures = cop.test(item);
					elapsed = System.currentTimeMillis() - start;
					infos.put(itemNumber, new Info(failures, elapsed));
				}
				else
				{
					final Info info = infos.get(itemNumber);
					failures = info.failures;
					elapsed  = info.elapsed;
				}
				
				totalFailures += failures;
				totalElapsed += elapsed;
				%>
				<td<% if(failures!=0){%> class="failure"<%} %>><%
				
				if(failures!=0)
				{
					%><img class="check2" src="<%=ConsoleServlet.error2%>"><%
				}
				%><%=failures%><%
				%></td>
				<td><%=format(elapsed)%></td><%
			}
			%>
			</tr><%
			
			itemNumber++;
		}
		
		if(test)
			cop.putStore(infos);
		
		if(infos!=null)
		{
			%>
			<tr>
				<th colspan="<%=headings.length%>"><a name="overall">T</a>otal</th>
				<td<% if(totalFailures!=0){%> class="failure"<%} %>><% if(totalFailures!=0){%><img class="check2" src="<%=ConsoleServlet.error2%>"><%} %><%=totalFailures%></td>
				<td><%=format(totalElapsed)%></td>
			</tr><%
		}
		%>
		</table><%
		
		if(totalFailures!=0)
		{
		%>
		<a href="javascript:hide()">hide non-failures</a><%
		}
		
		if(items.size()>10)
			writeButton(cop, out, test, testStore);
	}
	
	private final static <I> void writeButton(
			final TestCop<I> cop,
			final PrintStream out,
			final boolean test,
			final ConsoleServlet.Store<HashMap<Integer, Info>> testStore)
	{
		%>
		<form action="<%=cop%>#overall" method="POST">
			<input type="submit" name="<%=cop.TEST%>" value="test all" /><%
			
			Console_Jspm.write(out, test, testStore);
			%>
		</form><%
	}
}%>
package com.exedio.cope.console;

import static com.exedio.cope.console.Format.format;

import java.io.PrintStream;
import java.util.List;

final class Test_Jspm
{
	final static void writeHead(final PrintStream out)
	{
		%>
		<style>
			td.failure
			{
				background: #fbb;
			}
		</style>
		<script>
			function hide()
			{
				var table = document.getElementById("test_table");
				var rows = table.rows;
				for(rowCount = 0; rowCount<rows.length; rowCount++)
				{
					var row = rows[rowCount];
					var cells = row.cells;
					var keep = false;
					for(cellCount = 0; cellCount<cells.length; cellCount++)
					{
						var cell = cells[cellCount];
						if(cell.tagName=="TH" || cell.className=="failure")
						{
							keep = true;
							break;
						}
					}
					if(!keep)
						row.style.display = "none";
				}
			}
		</script><%
	}
	
	final static <I> void writeBody(
			final TestCop<I> cop,
			final PrintStream out,
			final String caption,
			final String[] headings,
			final List<I> items,
			final boolean test)
	{
		if(items.isEmpty())
		{
			%>
			<table>
				<caption><%=caption%></caption>
				<tr>
					<td class="text">
						There are no <%=cop.name%> in this model.
					</td>
				</td>
			</table><%
			return;
		}
		
		writeButton(cop, out);
		int totalFailures = 0;
		int totalElapsed = 0;
		%>
		<table id="test_table">
			<caption><%=caption%></caption>
			<tr><%
				
				for(final String heading : headings)
				{
				%>
				<th><%=heading%></th><%
				}
				if(test)
				{
				%>
				<th>Failures</th>
				<th>Elapsed<small>/ms<small></th><%
				}
				%>
			</tr><%
		for(final I item : items)
		{
			%>
			<tr><%
			
			for(final String value : cop.getValues(item))
			{
				%>
				<td class="text"><%=value%></td><%
			}
			if(test)
			{
				out.flush();
				final long start = System.currentTimeMillis();
				final int failures = cop.test(item);
				final long elapsed = System.currentTimeMillis() - start;
				totalFailures += failures;
				totalElapsed += elapsed;
				%>
				<td<% if(failures!=0){%> class="failure"<%} %>><%
				
				if(failures!=0)
				{
					%><%=failures%><%
				}
				else
				{
					%>ok<%
				}
				%></td>
				<td><%=format(elapsed)%></td><%
			}
			%>
			</tr><%
		}
		if(test)
		{
			%>
			<tr>
				<th colspan="<%=headings.length%>"><a name="overall">T</a>otal</th>
				<td<% if(totalFailures!=0){%> class="failure"<%} %>><% if(totalFailures!=0){%><%=totalFailures%><%}else{%>ok<%} %></td>
				<td><%=format(totalElapsed)%></td>
			</tr><%
		}
		%>
		</table><%
		
		if(totalFailures!=0)
		{
		%>
		<a href="javascript:hide()">hide non-failures</a><%
		}
		
		if(items.size()>10)
			writeButton(cop, out);
	}
	
	private final static void writeButton(
			final TestCop cop,
			final PrintStream out)
	{
		%>
		<form action="<%=cop%>#overall" method="POST">
			<input type="submit" name="<%=cop.TEST%>" value="test all" />
		</form><%
	}
}%>